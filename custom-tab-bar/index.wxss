.container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: white;
  display: flex;
}

.cont-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-pic {
  height: 50rpx;
  width: 50rpx;
}

.item-pic .image {
  width: 100%;
  height: 100%;
}

.item-text {
  color: #000000;
  font-size: 24rpx;
}

.item-text-active {
  color: #b7aae6;
  font-size: 24rpx;
}